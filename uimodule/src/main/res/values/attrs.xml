<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleBackground">
        <attr name="ripple_color" format="color" />
        <attr name="ripple_strokeWidth" format="dimension"/>
        <attr name="ripple_radius" format="dimension"/>
        <attr name="ripple_duration" format="integer"/>
        <attr name="ripple_amount" format="integer"/>
        <attr name="ripple_scale" format="float"/>
        <attr name="ripple_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleLayout">
        <attr name="circle_color" format="color" />
        <attr name="circle_border_width" format="dimension" />
        <attr name="circle_border_color" format="color" />
        <attr name ="android:layout_height" format="dimension"/>
        <attr name ="android:layout_width" format="dimension"/>

    </declare-styleable>
</resources>